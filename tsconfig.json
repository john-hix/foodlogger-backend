{
    "extends": "@tsconfig/node12/tsconfig.json",
    "compilerOptions": {
      "target": "ES6",
      "module": "CommonJS",
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "removeComments": true,
      "preserveConstEnums": true,
      
      "sourceMap": true
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
